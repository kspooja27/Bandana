<%- include('partials/header') %>
<link rel="stylesheet" href="/css/feed.css">

<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="col-md-6 m-auto">
            <div class="d-flex flex-row justify-content-between align-items-center p-2 bg-white border">
                <div class="feed-text px-2">
                    <h6 class="text-black-50 mt-2">What's on your mind</h6>
                </div>
                <div class="feed-icon px-2"><i class="fa fa-long-arrow-up text-black-50"></i></div>
            </div>

            <% postItems.forEach((post) => { %>
                <div class="box box-widget">

                    <div class="box-header with-border">
                        <div class="user-block">

                            <img class="img-circle" src="<%= post.postedBy.image %>" alt="User Image">

                            <span class="username"><a href="#" data-abc="true"><%= post.postedBy.name %></a></span>
                            <span class="description">7:30 PM Today</span>
                        </div>
                    </div>
                    <div class="box-body">
                        <p><%= post.title %></p>
                        <% if(post.image){ %>
                        <img class="img-responsive pad post-image" src="<%= post.image %>" alt="Photo">
                        <% } %>

                        <span class="pull-right text-muted"><%= post.comments.length%> comments</span>
                    </div>

                    <% post.comments.forEach((comment) => {%>
                    <div class="box-footer box-comments">
                        <div class="box-comment">
                            <img class="img-circle img-sm" src="<%=comment.postedBy.image%>" alt="User Image">
                            <div class="comment-text">
                                <span class="username"><%=comment.postedBy.name%><span class="text-muted pull-right">8:03 PM Today</span> </span> <%=comment.text%>
                            </div>
                        </div>
                    </div>
                    <% });%>
                    <div class="box-footer">
                        <form action="#" method="post"><img class="img-responsive img-circle img-sm"
                                                            src="https://img.icons8.com/color/36/000000/administrator-male.png"
                                                            alt="Alt Text">
                            <div class="img-push"><input type="text" class="form-control input-sm"
                                                         placeholder="Press enter to post comment"></div>
                        </form>
                    </div>
                </div>
            <% }); %>

        </div>
    </div>
</div>

<%- include('partials/footer') %>