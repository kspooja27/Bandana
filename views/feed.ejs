<%- include('partials/header') %>
<link rel="stylesheet" href="/css/feed.css">

<div class="user-details-right">
    <div class="box-header with-border">
        <div class="user-block">
            <img class="img-circle" src="/<%= Session.userImagePath %>" alt="User Image">

            <span class="username"><a href="/profile/<%= Session.userId %>" style="color: #333333 !important;"
                                      data-abc="true"><%= Session.userName %></a></span>
            <span class="description">
                                <a href="/logout" style="color: red !important;">Logout</a>
                            </span>

        </div>
    </div>
</div>


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="col-md-6 m-auto">
            <div class="text-right">
                <a href="/addPost" class="post-button" style="text-decoration: none;">Add post &nbsp; <i
                            class="fa fa-plus" style="color: #e03f59"></i></a>
            </div>
            <br><br>

            <% if(postItems.length == 0) { %>
                <center style="color: grey;">Nothing here yet! Check back later.</center>
            <% } else { %>
                <%- include('partials/posts') %>
            <% } %>
        </div>
    </div>
</div>


<%- include('partials/footer') %>